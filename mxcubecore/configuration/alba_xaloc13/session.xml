<object class = "XalocSession" role = "session">  
  <!-- ATTENTION . base data directories are overwritten in ALBA -->
  <!--   the value in ldap homeDirectory is used for the three base directories -->
  <!--      base_directory, base_process_directory, base_archive_directory -->
  <!--   check the code in ALBA/ALBAISPyBClient.py -->
  <synchrotron_name>ALBA</synchrotron_name>
  <endstation_name>BL13 - XALOC</endstation_name>
  <beamline_name>BL13 - XALOC</beamline_name>

  <file_info>
     <file_suffix>cbf</file_suffix>
     <precision>'04'</precision>    
     <!-- ATTENTION - base directory is obtained from ldap user home directory. Following lines are ignored -->
     <base_directory>/tmp</base_directory>
     <raw_data_folder_name>RAW_DATA</raw_data_folder_name>
     <processed_data_base_directory>/tmp</processed_data_base_directory>
     <processed_data_folder_name>PROCESSED_DATA</processed_data_folder_name>
     <archive_base_directory>/beamlines/ispyb/bl13/</archive_base_directory>
     <archive_folder></archive_folder>

  </file_info>
  
  <doorname>bl13/door/05</doorname>
  <command type="sardana" name="senv">senv</command>

</object>
