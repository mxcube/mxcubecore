<object class="XalocCollect">

  <use_sardana_scan>False</use_sardana_scan>
  <mesh_sshape>True</mesh_sshape>
  
  <object href="/supervisor" role="supervisor"/>
  <object href="/mini-diff" role="diffractometer"/>
  <object href="/omega" role="omega"/>
  <object href="/dbconnection" role="lims_client"/>

  <object href="/offline-processing" role="offline_processing"/>

  <object href="/fastshut" role="fast_shutter"/>
  <object href="/slowshut" role="slow_shutter"/>
  <object href="/photonshut" role="photon_shutter"/>
  <object href="/frontend" role="frontend"/>

  <object href="/energy" role="energy"/>
  <object href="/transmission" role="transmission"/>
  <object href="/pilatus" role="detector"/>
  <object href="/resolution" role="resolution"/>

  <object href="/mach-info" role="machine_info"/>
  <object href="/beam" role="beam_info"/>

  <doorname>bl13/door/01</doorname>
  <command type="sardana" name="ni_configure">ni660x_configure_collect_multi</command>
  <command type="sardana" name="ni_unconfigure">ni660x_unconfigure_collect_multi</command>
  <command type="sardana" name="meshct">meshct</command>
  <command type="sardana" name="ascanct">ascanct</command>
  <!--command type="sardana" name="set_pilatus_saving_pattern">set_pilatus_saving_pattern</command-->
  <command type="sardana" name="set_pilatus_saving_pattern">set_meas_conf</command>
  <command type="sardana" name="senv">senv</command>

  <object href="/flux" role="flux"/>
  <channel type="tango" tangoname="kappaalign" name="kappapos">position</channel>
  <channel type="tango" tangoname="phialign" name="phipos">position</channel>
  <channel type="tango" tangoname="rescomp" name="rescorner_position">position</channel>
  <channel type="tango" tangoname="bl13/ct/variables" name="beamx">beamx</channel>
  <channel type="tango" tangoname="bl13/ct/variables" name="beamy">beamy</channel>

  <monochromator>Channel-cut Si(111)</monochromator>
  <focusing_optic>KB mirrors (VFM and HFM in Kirkpatrick-Baez configuration)</focusing_optic>
  <polarisation>0.99</polarisation>

  <undulators>
    <undulator>
     <type>ivu21</type>
     <device_uri></device_uri>
     <gap_index>0</gap_index>
    </undulator>
  </undulators>

</object>
